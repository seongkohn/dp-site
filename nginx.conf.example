# Nginx configuration for digitalpathology.co.kr
# 1. Copy to /etc/nginx/sites-available/digitalpathology.co.kr
# 2. Symlink: ln -s /etc/nginx/sites-available/digitalpathology.co.kr /etc/nginx/sites-enabled/
# 3. Test:    nginx -t
# 4. Reload:  systemctl reload nginx
# 5. SSL:     certbot --nginx -d digitalpathology.co.kr -d www.digitalpathology.co.kr

server {
    listen 80;
    server_name digitalpathology.co.kr www.digitalpathology.co.kr;
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name digitalpathology.co.kr www.digitalpathology.co.kr;

    # SSL (managed by certbot)
    ssl_certificate /etc/letsencrypt/live/digitalpathology.co.kr/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/digitalpathology.co.kr/privkey.pem;

    root /var/www/dp-site;
    index index.html;

    # Serve static files directly; 404 falls back to index.html
    location / {
        try_files $uri $uri/ =404;
    }

    # Cache images aggressively
    location ~* \.(jpg|jpeg|png|gif|svg|ico|webp)$ {
        expires 30d;
        access_log off;
        add_header Cache-Control "public";
    }

    # Cache CSS/JS
    location ~* \.(css|js)$ {
        expires 7d;
        access_log off;
        add_header Cache-Control "public";
    }

    client_max_body_size 1M;
}
